{% block body %}
<div class="col-md-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Gestionar Solicitud de Visa 3</h3>
        </div>
        <!-- /.box-header -->
        <div class="row">
            <div class="col-md-12">
                <div class="box-body">
                    {{ form_start(form) }}
                 
                 
                    
                   
                    {% if is_granted("ROLE_VISADO") or is_granted("ROLE_ADMIN")  %}
                   

                    <div class="row">
                      <div class="col-md-3">
                            <div class="form-group">
                                Fecha inicio trámite (MM-DD-YYYY)
                                {{ form_widget(form.fechainiciotramite, { attr:{ class:'js-datepicker' } }) }}
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                Fecha final trámite (MM-DD-YYYY)
                               {{ form_widget(form.fechafinaltramite, { attr:{ class:'js-datepicker' } }) }}
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <div style="float: right">
                        <button class="btn btn-primary" style="margin: 0px 5px">{{ button_label|default('ADICIONAR') }}</button>
                       
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    
    <script>
        $('.js-datepicker').datepicker({
            format:'yyyy.MM.dd'
        });
    </script>
{% endblock %}