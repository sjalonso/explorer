{% extends 'base.html.twig' %}



{% block body %}
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="box">
            <div class="box-header">
              <h3 class="box-title">Listas de Días de VUELTA </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped" width="100%">
                    <thead>
                        <tr>
            <tr>
                <th>Id</th>
                <th>Dia</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dia_vueltum in dia_vueltas %}
            <tr>
                <td>{{ dia_vueltum.id }}</td>
                <td>{{ dia_vueltum.dia }}</td>
                <td>
                    <a href="{{ path('dia_vuelta_show', {'id': dia_vueltum.id}) }}"><button class="btn btn-sm btn-warning">Ver</button></a>
                    <a href="{{ path('dia_vuelta_edit', {'id': dia_vueltum.id}) }}"><button class="btn btn-sm btn-success">Editar</button></a>
                </td>
            </tr>
        {% else %}
           <tr>
                            <td colspan="3">No se encontraron registros</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <a href="{{ path('dia_vuelta_new') }}"><button class="btn btn-primary">CREAR NUEVO DÍA</button></a>
    </section>
    {% endblock %}