{% extends 'base.html.twig' %}
{% block body %}
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">

            <div class="col-md-12">
                <div class="box">
                    {% if error != '' %}
                        <div class="error" style="color: #b91a14">{{ error }}</div>
                    {% endif %}
                    <div class="box-header">
                        <h3 class="box-title">Usuario</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        Nombre y apellidos
                                    </div>
                                    <div class="col-md-10">
                                        {{ user.nombre }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-2">
                                        Correo
                                    </div>
                                    <div class="col-md-10">
                                        {{ user.email }}
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-2">
                                        Roles
                                    </div>
                                    <div class="col-md-10">
                                        {{ user.roles|join(', ') }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-2">
                                        Sucursal
                                    </div>
                                    <div class="col-md-10">
                                        {{ user.Sucursal }}


                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-2">
                                        Activo
                                    </div>
                                    <div class="col-md-10">
                                        {% if user.activo %}
                                            SI
                                        {% else %}
                                            NO
                                        {% endif %}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-body" style="display: flex">
                                <a href="{{ path('user_index') }}"><button class="btn btn-primary" style="margin: 0px 5px">VOLVER AL LISTADO</button></a>
                            {% if is_granted("ROLE_ADMIN") %}
                                <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn  btn-success" style="margin: 0px 5px">EDITAR</button></a>

                                {{ include('user/_delete_form.html.twig') }}

                                {{ include('user/_deshabilitar_form.html.twig') }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

