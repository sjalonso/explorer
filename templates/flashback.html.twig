{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4><img src="{{ asset('images/bad.ico') }}">Error!</h4>
        {{ flashMessage|raw }}
    </div>
{% endfor %}

