{% extends 'base.html.twig' %}


{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    {% if error != '' %}
                        <div class="error" style="color: #b91a14">{{ error }}</div>
                    {% endif %}
                    <div class="box-header">
                        <h3 class="box-title">Sucursal</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        Sucursal
                                    </div>
                                    <div class="col-md-10">
                                        {{ sucursal.nombre }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box-body" style="display: flex">
                                      
                                            <a href="{{ path('sucursal_index') }}"><button class="btn btn-primary" style="margin: 0px 5px">VOLVER AL LISTADO</button></a>
                                                {% if is_granted("ROLE_AEROLINEA" ) or is_granted("ROLE_ADMIN" ) %}
                                                <a href="{{ path('sucursal_edit', {'id': sucursal.id}) }}"><button class="btn  btn-success" style="margin: 0px 5px">EDITAR</button></a>
                                            
                                            {{ include('sucursal/_delete_form.html.twig') }}
                                            {% endif %}  
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
