<div class="col-md-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Estado Civil</h3>
        </div>
        <!-- /.box-header -->
        <div class="row">
            <div class="col-md-12">
                <div class="box-body">
                    {{ form_start(form) }}
                    {% if error != '' %}
                        <div class="error" style="color: #b91a14">{{ error }}</div>
                    {% endif %}
                    {#Fila1#}
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                Nombre
                            {#{{ form_label(form.tipoestado, null, {'label_attr': {'class': 'control-label'}}) }}#}
                            {{ form_widget(form.tipoestado, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>            
                    </div>

                    <div style="float: right">
                        <button class="btn btn-primary" style="margin: 0px 5px">{{ button_label|default('ADICIONAR') }}</button>
                       
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
